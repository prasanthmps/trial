<html lang="en">
<%- include("./partials/head.ejs") %>

<body>
  <%- include("./partials/nav.ejs") %>
    
  <div class="create-blog content">
    <form action="/blogs/<%= blog.id %>?_method=PUT" method="POST">
      <label for="title">Blog title:</label>
      <input value= "<%=blog.title%>" type="text" id="title" name="title" required>
      <label for="snippet">Blog snippet:</label>
      <input value= "<%=blog.snippet%>" type="text" id="snippet" name="snippet" required>
      <label for="body">Blog body:</label>
      <textarea id="body" name="body" required><%=blog.body%></textarea>
      <button>Submit</button>
    </form>
  </div>

  <%- include("./partials/footer.ejs") %>
</body>
</html>